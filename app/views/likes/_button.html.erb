<% like = current_user.likes.find_by(likeable: likeable) %>
<% if like.nil? %>
  <%= button_to(likes_path,  class:"btn btn-success",
  params:{ like: {likeable_id: likeable.id, likeable_type: likeable.class.to_s}}) do %>
    Like (<%= likeable.likes.count %>)
  <% end %>
<% else %>
  <%=button_to(like_path(like),
  class:"btn btn-success",
  method: :delete) do %>
  Unlike (Likes <%= likeable.likes.count%>)
  <% end %>
<% end %>